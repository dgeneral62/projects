<p id="notice"><%= notice %></p>

<h1>Listing Friends</h1>


<%= form_tag friends_path, class: "form-inline", :method => :get do %>
    <div class="input-group input-group-lg">
      <% if params[:query].present? %>
          <div class="input-group-btn">
            <%= link_to "Reset", friends_path, class: "btn btn-default" %>
          </div>
      <% else %>
          <%= text_field_tag :query, params[:query], name: "Friend_Search", class: "form-control", autocomplete: "off" %>
          <div class="input-group-btn">
            <%= submit_tag "Search", class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
<% end %>

<table>
  <thead>
    <tr>
      <br />
      <th>Gamer ID</th>
      <th>Name</th>
      <th>Player Rank</th>
      <th>Platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.gamer_id %></td>
        <td><%= friend.name %></td>
        <td><%= friend.player_rank %></td>
        <td><%= friend.platform %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => t("helpers.links.find_new_friend")),
            new_friend_path,
            :class => 'btn btn-primary' %>

<%= link_to t('.cancel', :default => t("helpers.links.current_friends")),
            user_friends_path, :class => 'btn btn-default' %>
