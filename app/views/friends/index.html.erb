<p id="notice"><%= notice %></p>

<h1>Listing Friends</h1>
<div id="search" class="light">
  <%= form_tag friends_path, :method => :get do %>
      <%= auto_complete_field_tag_jquery(:search, params[:search], {:placeholder => "Enter Search Here"}) %>
      <button id='submit_search' style="font-size: 12px;">Search</button>
  <% end %>
</div>
<p><br /></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Gamer IDs</th>
      <th>Name</th>
      <th>Player Rank</th>
      <th>Platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.gamer_id %></td>
        <td><%= friend.name %></td>
        <td><%= friend.player_rank %></td>
        <td><%= friend.platform %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

