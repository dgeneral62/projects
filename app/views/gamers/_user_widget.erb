<% if user_signed_in? %>
    <p>Welcome <%= current_user.name %></p>
    <%= render :partial => 'devise/registrations/status' %>
    <%= link_to 'Edit Game List', gamers_path %> <br />
    <%= link_to 'Settings', edit_user_registration_path %> <br />
    <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
<% else %>
    <%=  link_to 'Login', new_user_session_path %>
