<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<%= form_tag games_path, class: "form-inline", :method => :get do %>
    <div class="input-group input-group-lg">
      <% if params[:query].present? %>
          <div class="input-group-btn">
            <%= link_to "Reset", games_path, class: "btn btn-default" %>
          </div>
      <% else %>
          <%= text_field_tag :query, params[:query], name: "Game_Search", class: "form-control", autocomplete: "off" %>
          <div class="input-group-btn">
            <%= submit_tag "Search", class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
<% end %>


<table class = "table table-bordered">
  <thead>
    <tr>
      <br />
      <th>Game</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>

        <td><%= link_to 'Show', game %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => t("helpers.links.add_new_game")),
            new_game_path,
            :class => 'btn btn-primary' %>
<%= link_to t('.cancel', :default => t("helpers.links.current_game_listing")),
            user_games_path, :class => 'btn btn-default' %>
