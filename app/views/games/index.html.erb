<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>
<div id="search" class="light">
  <%= form_tag games_path, :method => :get do %>
      <%= auto_complete_field_tag_jquery(:search, params[:search], {:placeholder => "Enter Search Here"}) %>
      <button id='submit_search' style="font-size: 12px;">Search</button>
  <% end %>
</div>
<p><br /></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Release date</th>
      <th>Publisher</th>
      <th>Platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.rating %></td>
        <td><%= game.release_date %></td>
        <td><%= game.publisher %></td>
        <td><%= game.platform %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %> <p><br /></p>

<%= link_to "Main Menu", root_path  %>
