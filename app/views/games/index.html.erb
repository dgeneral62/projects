<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<%= form_tag games_path, class: "form-inline", :method => :get do %>
    <div class="input-group input-group-lg">
      <% if params[:query].present? %>
          <div class="input-group-btn">
            <%= link_to "Reset", games_path, class: "btn btn-default" %>
          </div>
      <% else %>
          <%= text_field_tag :query, params[:query], name: "Game_Search", class: "form-control", autocomplete: "off" %>
          <div class="input-group-btn">
            <%= submit_tag "Search", class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
<% end %>


<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Release date</th>
      <th>Publisher</th>
      <th>Platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.rating %></td>
        <td><%= game.release_date %></td>
        <td><%= game.publisher %></td>
        <td><%= game.platform %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Game', new_game_path %> <p><br /></p>
