<p id="notice"><%= notice %></p>

<h1>Listing User Friends</h1>
<div id="search" class="light">
  <%= form_tag user_friends_path, :method => :get do %>
      <%= auto_complete_field_tag_jquery(:search, params[:search], {:placeholder => "Enter Search Here"}) %>
      <button id='submit_search' style="font-size: 12px;">Search</button>
  <% end %>
</div>
<p><br /></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Gamer</th>
      <th>Name</th>
      <th>Player rank</th>
      <th>Platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_friends.each do |user_friend| %>
      <tr>
        <td><%= user_friend.gamer_id %></td>
        <td><%= user_friend.name %></td>
        <td><%= user_friend.player_rank %></td>
        <td><%= user_friend.platform %></td>
        <td><%= link_to 'Show', user_friend %></td>
        <td><%= link_to 'Edit', edit_user_friend_path(user_friend) %></td>
        <td><%= link_to 'Destroy', user_friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
<%= link_to 'New User friend', new_user_friend_path %>
</p>
<p>
  <%= link_to "Main Menu", root_path %>
</p>