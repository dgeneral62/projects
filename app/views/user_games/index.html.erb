<p id="notice"><%= notice %></p>
<br/>
<h1>Listing User Games</h1>
<div id="search" class="light">
<%= form_tag user_games_path, :method => :get do %>
    <%= auto_complete_field_tag_jquery(:search, params[:search], {:placeholder => "Enter Search Here"}) %>
    <button id='submit_search' style="font-size: 12px;">Search</button>
    <% end %>
</div>

<p><br /></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th> Name </th>
      <th> Rating </th>
      <th> Release date </th>
      <th> Publisher </th>
      <th> Platform </th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_games.each do |user_game| %>
      <tr>
        <td><%= user_game.name %></td>
        <td><%= user_game.rating %></td>
        <td><%= user_game.release_date %></td>
        <td><%= user_game.publisher %></td>
        <td><%= user_game.platform %></td>
        <td><%= link_to 'Show', user_game %></td>
        <td><%= link_to 'Edit', edit_user_game_path(user_game) %></td>
        <td><%= link_to 'Destroy', user_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
<%= link_to 'New User game', new_user_game_path %>
</p>
<p>
<%= link_to "Main Menu", root_path %>
</p><%= link_to t('.cancel', :default => t("helpers.links.Add_Games")),
            games_path,
            :class => 'btn btn-primary' %>
